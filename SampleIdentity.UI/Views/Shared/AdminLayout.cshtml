<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">Üye Ana Sayfa <span class="sr-only">(current)</span></a>
                    </li>

                </ul>
            </div>
        </div>

    </nav>




    <div class="container" style="margin-top:10px">
        <div class="row">
            <div class="col-md-10">
                @RenderBody()
            </div>
            <div class="col-md-2">
                <h3>Menü</h3>

                <a class="btn btn-danger btn-block" asp-action="Users" asp-controller="Admin">Üyeler</a>

                <a class="btn btn-danger btn-block" asp-action="Claims" asp-controller="Admin">Claims</a>

                <a class="btn btn-danger btn-block" asp-action="Roles" asp-controller="Admin">Roller</a>

                <a class="btn btn-danger btn-block" asp-action="Logout" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış yap</a>


            </div>
        </div>

    </div>

    <script src="~/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script>
        $('.your-checkbox').prop('indeterminate', true)
    </script>
</body>
</html>
