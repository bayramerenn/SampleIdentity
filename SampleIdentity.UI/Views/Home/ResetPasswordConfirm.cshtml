@model SampleIdentity.UI.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}
<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (ViewBag.Status == "success")
        {
            <div class="alert alert-success" role="alert">
                "Şifreniz başarıyla yenilenmiştir.
                <a asp-controller="Home" asp-action="Login" class="alert-link">Login</a>
                ekranında giriş yapabilirsiniz."

            </div>
        }

        else
        {

            <h4>Şifre Yenileme</h4>
            <form asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label"></label>
                    <input asp-for="PasswordNew" class="form-control" />
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Yeni Şifre Oluştur" class="btn btn-primary" />
                </div>
            </form>


        }

    </div>
</div>
