@model SampleIdentity.UI.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "LogIn";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h1>Üye Girişi</h1>
        <hr />
        <form asp-action="LogIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" asp-for="RememberMe" /> Beni Hatırla
                </label>
            </div>


            <div class="form-group">
                <input type="submit" value="Giriş yap" class="btn btn-primary" />
            </div>
           

        </form>

        <a asp-action="FacebookLogin" class="btn btn-info btn-block">Facebook ile giriş yap</a>
        <a asp-action="GoogleLogin" class="btn btn-danger btn-block">Google ile giriş yap</a>
        <a asp-action="MicrosoftLogin" class="btn btn-dark btn-block">Microsoft ile giriş yap</a>
        <a class="btn btn-link" asp-action="ResetPassword" style="padding-left:0px">Şifremi Unuttum</a>
    </div>
</div>

