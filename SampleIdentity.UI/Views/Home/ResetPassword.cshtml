@model PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPassword";
}




<hr />
<div class="row">
    <div class="col-md-4 offset-md-4">

        @if (ViewBag.Status == "success")
        {
            <div class="alert alert-success" role="alert">
                Şifre sıfırlama linki e-posta adresine gönderilmiştir.
            </div>
        }

        else
        {

            <h1>Şifremi Unuttum</h1>
            <hr />
            <div class="alert alert-info">
                Yeni şifre belirlemek için kayıtlı e-posta adresinizi yazınız.
                Şifre değiştirme linkini e-posta adresinize göndereceğiz.
            </div>
            <form asp-action="ResetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Gönder" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>



