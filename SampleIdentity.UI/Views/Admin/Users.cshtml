@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Üyeler</h1>

<table class="table table-bordered table-striped">
    <tr>
        @*<td>User Id</td>*@
        <td>User Name</td>
        <td>Email</td>
        <td>Roller</td>
        <td>Rol Atama</td>
        <td>Güncelle</td>
    </tr>
    @if (Model.Count < 1)
    {
        <tr>
            <td colspan="3">Hiç bir üye yoktur</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
<tr>
    @*<td>@item.Id</td>*@
    <td>@item.UserName</td>
    <td>@item.Email</td>
    <td user-roles="@item.Id"></td>
    <td>
        <a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">Rol Ata</a>
    </td>
    <td>
        <a class="btn btn-success" asp-action="PasswordChange" asp-route-id="@item.Id">Güncelle</a>
    </td>
</tr>
        }
    }
</table>