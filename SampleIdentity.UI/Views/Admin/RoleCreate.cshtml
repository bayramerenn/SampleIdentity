@model SampleIdentity.UI.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "RoleCreate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Role Oluşturma</h1>

@*<input type="hidden" asp-for="Id" value="@(Model == null ? "" : Model.Id)" />*@
<input type="hidden" asp-for="Id"/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="RoleCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Rol Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


